@model IEnumerable<Vidly2.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

<table class="table table-striped table-hover ">
    <thead>
        <tr>
            <th><b>Customers</b></th>
            <th>Membership Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <th>@Html.ActionLink(customer.Name, "Details", "Customers", new { id = customer.Id }, null)</th>
                <th>@customer.MembershipType.Name</th>
            </tr>
        }
        
    </tbody>
</table>

