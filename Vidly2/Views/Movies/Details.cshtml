@model Vidly2.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Released Date: @Model.ReleasedDate.Value.ToLongDateString()</li>
    <li>Date Added: @Model.DateAdded.Value.ToLongDateString()</li>
    <li>Number In Stock: @Model.NumberInStock</li>
</ul>
